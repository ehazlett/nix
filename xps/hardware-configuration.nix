{ config, lib, pkgs, ... }:

{
  imports =
    [ <nixpkgs/nixos/modules/installer/scan/not-detected.nix>
    ];

  boot.initrd.availableKernelModules = [ "xhci_pci" "ahci" "nvme" "usb_storage" "sd_mod" "rtsx_pci_sdmmc" "dm_snapshot" ];
  boot.kernelModules = [ "kvm-intel" "fuse" "tun" "virtio" ];
  boot.extraModulePackages = [ ];
  boot.initrd.luks.devices = [
    { name = "root"; device = "/dev/nvme0n1p2"; preLVM = true; allowDiscards = true; }
    { name = "swap"; device = "/dev/nvme0n1p2"; preLVM = true; }
  ];

  fileSystems."/" =
    { device = "/dev/xps-vg/root";
      fsType = "ext4";
      options = [ "noatime" "nodiratime" "discard" ];
    };

  fileSystems."/boot" =
    { device = "/dev/nvme0n1p1";
      fsType = "vfat";
    };

  swapDevices = [ { device = "/dev/xps-vg/swap";  } ];

  nix.maxJobs = lib.mkDefault 4;
}
